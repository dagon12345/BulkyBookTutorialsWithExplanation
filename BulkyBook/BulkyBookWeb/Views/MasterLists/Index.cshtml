@model IEnumerable<MasterList>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class ="col-6"> 
            <h2 class="text-primary">Master List</h2>
        </div>
       <div class="col-6 text-end">
           <a asp-controller="MasterLists" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New
           </a>
       </div>
    </div>
    <br /><br />

    <table class="display nowrap " style="width:100%" id="myTable">
    <thead>
        <tr>
            <th>
                <span> Last Name</span>
            </th>
            <th>
                <span> First Name</span>
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)// Model is our IEnumerable<Category> class above
    {
        <tr >
            <td width="50%">
                <span>@obj.LastName</span>
            </td>
            <td width="30%">
                 <span>@obj.FirstName</span>
            </td>
            <td>
                <div class="w-90 btn-group" role="group">
                    <a asp-controller="MasterLists" asp-action="Edit" asp-route-id="@obj.ID" 
                    class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                     <a asp-controller="MasterLists" asp-action="Delete" asp-route-id="@obj.ID"
                    class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>
                
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}


